{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/bin": true,
        "**/obj": true,
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },
    "[csharp]": {
        "editor.tabSize": 4
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[handlebars]": {
        "editor.tabSize": 2
    },
    "[less]": {
        "editor.tabSize": 2
    },
    "eslint.packageManager": "yarn",
    "eslint.options": {
        "configFile": "./src/ProjectWombat/ClientApp/.eslintrc.js"
    },
    "eslint.enable": true,
    "dotnet-test-explorer.testProjectPath": "./test/**/*.csproj",
    "dotnet-test-explorer.showCodeLens": true
}